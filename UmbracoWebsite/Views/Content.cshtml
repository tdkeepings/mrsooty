@inherits UmbracoTemplatePage

@{
    Layout = "Master.cshtml";

    var pageType = ViewBag.PageType;
    var pageTypeClassname = pageType;
    var showTitle = ViewBag.ShowTitle ?? true;

}

<div class="smallHero">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                @if (showTitle) { 
                    <h2>@ViewBag.PageTitle</h2>
                }
                @if (!string.IsNullOrEmpty(ViewBag.PageSubtitle)) {
                    <h5>Tags: @ViewBag.PageSubtitle</h5>
                }
            </div>
        </div>
    </div>
</div>

<div class="content @pageTypeClassname">
    <div class="container">
        <div class="row">
            @RenderSection("MainContent")
        </div>
    </div>
</div>

<div class="footer">

</div>